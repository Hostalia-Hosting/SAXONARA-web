import { getCollection, render } from 'astro:content'; // <--- Importem 'render' per separat
import MainLayout from '../../layouts/MainLayout.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, 
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry); // <--- Ara es fa aixÃ­: render(entry)
---

<MainLayout title={entry.data.title} description={entry.data.description}>
  <article>
    <div class="content-wrapper"> 
      <h1>{entry.data.title}</h1>
      <Content />
    </div>
  </article>
</MainLayout>