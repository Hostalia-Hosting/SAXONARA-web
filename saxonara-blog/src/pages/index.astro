---
import { getCollection } from 'astro:content';
const posts = await getCollection('blog');
---

<html>
  <body>
    <h1>Benvingut al meu Blog de Saxofonista</h1>
    <ul>
      {posts.map(post => (
        <li>
          <a href={`/life/blog/${post.id}/`}>{post.data.title}</a>
        </li>
      ))}
    </ul>
  </body>
</html>